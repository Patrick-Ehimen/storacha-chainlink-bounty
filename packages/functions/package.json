{
  "name": "@storacha-chainlink/functions",
  "version": "0.1.0",
  "description": "Chainlink Functions verification source code for the data bounty marketplace",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src/source.js"
  ],
  "scripts": {
    "build": "tsc && cp src/source.js dist/source.js",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "simulate": "node --loader ts-node/esm scripts/simulate.ts"
  },
  "keywords": [
    "chainlink",
    "functions",
    "verification",
    "ipfs",
    "storacha",
    "bounty"
  ],
  "license": "MIT",
  "dependencies": {
    "@chainlink/functions-toolkit": "^0.3.0"
  },
  "devDependencies": {
    "@storacha-chainlink/eslint-config": "workspace:*",
    "@storacha-chainlink/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@vitest/coverage-v8": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.9.2",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
